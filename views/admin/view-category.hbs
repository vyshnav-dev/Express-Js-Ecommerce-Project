



<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-category" class="btn btn-success ml-auto">Add Categories</a>

        </div>
         <h1>  Categories </h1> 
        
        <table class="table mt-5 "   id="productsTable" >
  <thead>
    <tr>
      <th scope="col">No</th>
       <th scope="col">Category</th>
      <th scope="col">Image</th>
     
      
      {{!-- <th>Status</th> --}}
      <th>Option</th>
    </tr>
  </thead>
  <tbody>
    {{#each category}}
    <tr>
      <td scope="row">{{this.Number}}</td>
      <td>{{this.Category}}</td>
      {{#each this.photos}}
       <td><img style="width: 50px; height: 50px;" src="{{this.fileName}}" alt=""></td>
       {{/each}}
     {{!-- <td>{{this.Category}}</td> --}}
      {{!-- <td>{{this.Stock}}</td> --}}
      {{!-- <td>{{this.Status}}</td> --}}
      <td>
        <a href="/admin/edit-category/{{this._id}}" class="btn btn-primary">Edit</a>
        {{!-- <a href="/admin/delete-category/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete{{this.Category}}')">Delete</a> --}}
        {{#if this.isHide}}
                        <a href="/admin/unhide-category/{{this._id}}" class="btn btn-primary">UnList</a>
                        {{else}}
                        <a href="/admin/hide-category/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to hide from the user {{this.Category}}?')" >List</a>
                        {{/if}}
      </td>
    </tr>
   {{/each}}
  </tbody>
</table>
    </div>
</section>

<script>
// Get the table element
const table = document.getElementById('productsTable');

// Get all rows in the table body
const rows = table.querySelectorAll('tbody tr');

// Set the row number for each row
rows.forEach((row, index) => {
  const cell = row.querySelector('td:first-child');
  cell.textContent = index + 1; // Set the row number
});


</script>


