{{else}}

<section class="h-100 gradient-custom">
    <div class="container py-5">

        <div class="row d-flex justify-content-center my-4">
            <div class="col-md-8">
                <div class="card mb-4" >
                    <div class="card-header py-3">
                        <h5 class="mb-0"><strong> Your Wishlist</strong></h5>
                    </div>
                   {{#each list.products}}
                    <div class="card-body">
                         
                        

                        <!-- Single item -->
                        <div class="row">

                            <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                                <!-- Image -->
                                <div class="bg-image hover-overlay hover-zoom ripple rounded"
                                    data-mdb-ripple-color="light">
                                    
                                    <div>
                                        
                                         <a href="/productdetails/{{this.item}}"></a>
                                            <img src="{{this.itemphotos.[0].fileName}}" class="w-100" alt="" />
                                         </a>
                                    </div>
                                   
                                    <a href="#!">
                                        <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                                    </a>
                                </div>
                                <!-- Image -->
                            </div>


                            <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                                <!-- Data -->
                                <p><strong>{{this.itemName}}</strong></p>


                              
                                {{!-- <button type="button" class="btn btn-outline-danger"
                                    onclick="removeProduct('{{../list._id}}', '{{this.item}}')">Remove</button> --}}
                                <!-- Data -->
                                <strong><span>â‚¹</span>{{this.itemPrice}}</strong>
                            </div>


                            <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                                

                                <p style="margin-top: 5rem;" class="text-start text-md-center ">
                                    
                                    <button type="button" class="btn btn-outline-danger"
                                    onclick="removeProduct('{{../list._id}}', '{{this.item}}')">Remove</button>

                                    <button style="height: 40px;border-radius: 40px;" onclick="addToCart('{{this.item}}')" class="btn-warning">Add to cart<i class="fa fa-shopping-cart"></i></button>
    
                                </p>
                            </div>
                             
                           
                        </div>
                  
                    </div>
                  {{/each}}
                {{/if}} 
                  
                </div>
                
            </div>
        </div>
             
                 
    </div>
    </div>
        
</section>

<script>

    function removeProduct(wishId,prodId){
  $.ajax({
    url:'/remove-from-wishlist',
    data:{
      id:wishId,
      product:prodId,
    },
    method:'post',
    success:(response)=>{
        alert("Product removed from Cart")
        location.reload()
    }
  })
}
</script>